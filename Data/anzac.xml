    </objectType>
    <item id="anzacHat" name="Gallipolis Scouting Hat" bind="pickup" gearSlot="0"
        sounds="leather" >
        <offset x="-5" y="-5" />
        <canBeRepaired cost="leather" tool="sewing" />
        <particles profile="poppyGrowth" />
    </item>
