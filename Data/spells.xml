<!-- 4 podes = melee range -->

<!--
Functions:
    doDirectDamage (i1 = damage)
    heal (i1 = amount to heal)
    buff (s1 = ID of buff to apply)
    debuff (s1 = ID of debuff to apply)
-->

<root>

<spell id="fireball" name="Fireball" cost=10 range=30 school="fire" >
    <aesthetics projectile="fireball" sounds="fireball" impactParticles="fire" />
    <targets enemy=1 />
    <function name="doDirectDamage" i1=5 />
</spell>
<spell id="heal" name="Heal" cost=12 range=25 >
    <aesthetics sounds="heal" impactParticles="lightRays" />
    <targets friendly=1 self=1 />
    <function name="heal" i1=20 />
</spell>
<spell id="poison" name="Poison" cost=10 range=30 school="earth" >
    <aesthetics impactParticles="poison" />
    <targets enemy=1 />
    <function name="debuff" s1="poison" />
</spell>


<spell id="shieldBlock" name="Asdf" cost=1 >
    <targets self=1 />
    <function name="buff" s1="shieldBlock" />
</spell>
<spell id="lastStand" name="Asdf" cost=1 >
    <targets self=1 />
    <function name="buff" s1="lastStand" />
</spell>

<spell id="bleed" name="Lacerate" cost=1 range=30 >
    <aesthetics impactParticles="heavyBlood" />
    <targets enemy=1 />
    <function name="debuff" s1="bleed" />
</spell>
<spell id="superHit" name="Asdf" cost=1 range=4 >
    <targets enemy=1 />
    <function name="doDirectDamage" i1=5 />
</spell>
<spell id="whirlwind" name="Blade Storm" cost=30 radius=4 >
    <aesthetics impactParticles="heavyBlood" />
    <targets enemy=1 />
    <function name="doDirectDamage" i1=5 />
</spell>
<spell id="enrage" name="Bloodlust" cost=1 >
    <targets self=1 />
    <function name="debuff" s1="enrage" />
</spell>

<spell id="airDoT" name="Socratic Argument" cost=1 range=30 school="air" >
    <targets enemy=1 />
    <function name="debuff" s1="airDoT" />
</spell>
<spell id="airDamage" name="Rhetoric" cost=1 range=30 school="air" >
    <targets enemy=1 />
    <function name="doDirectDamage" i1="5" />
</spell>
<spell id="critResistBuff" name="Stoicism" cost=1 >
    <targets self=1 />
    <function name="buff" s1="critResistBuff" />
</spell>
<spell id="meditate" name="Meditating" >
    <targets self=1 />
    <function name="buff" s1="meditate" />
</spell>

</root>
