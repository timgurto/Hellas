<!-- 4 podes = melee range -->

<!--
Functions:
    doDirectDamage (i1 = damage)
    heal (i1 = amount to heal)
    buff (s1 = ID of buff to apply)
    debuff (s1 = ID of debuff to apply)
-->

<root>

<!-- General -->
<spell id="food" name="Eat food" >
    <targets self=1 />
    <function name="buff" s1="food" />
</spell>

<!-- Hoplite -->
<spell id="shieldBlock" name="Raise Shield" cost=10 >
    <targets self=1 />
    <function name="buff" s1="shieldBlock" />
</spell>

<!-- Skirmisher -->
<spell id="bleed" name="Lacerate" cost=10 range=4 >
    <targets enemy=1 />
    <function name="debuff" s1="bleed" />
</spell>
