<!-- 4 podes = melee range -->

<root>

<spell id="fireball" name="Fireball" cost=1 range=30 school="fire" >
    <aesthetics projectile="fireball" sounds="fireball" impactParticles="fire" />
    <targets enemy=1 />
    <function name="doDirectDamage" a=10 />
</spell>
<spell id="heal" name="Heal" cost=25 range=25 >
    <aesthetics sounds="heal" impactParticles="lightRays" />
    <targets friendly=1 self=1 />
    <function name="heal" a=40 />
</spell>
<spell id="whirlwind" name="Whirlwind" cost=60 radius=4 >
    <aesthetics impactParticles="heavyBlood" />
    <targets enemy=1 />
    <function name="doDirectDamage" a=10 />
</spell>

</root>
